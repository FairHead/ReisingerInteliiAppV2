<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ReisingerIntelliApp_V4.Views.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:components="clr-namespace:ReisingerIntelliApp_V4.Components"
    xmlns:controls="clr-namespace:ReisingerIntelliApp_V4.Controls"
    xmlns:viewmodels="clr-namespace:ReisingerIntelliApp_V4.ViewModels"
    x:Name="Root"
    BackgroundColor="#1E1E1E"
    Shell.NavBarIsVisible="False">

    <!--  Remove BindingContext - will be set in code-behind  -->

    <ContentPage.Content>
        <Grid IsClippedToBounds="True" RowDefinitions="Auto,Auto,*,Auto">
            <!--  Background Logo - placed first so it's behind everything  -->
            <components:BackgroundLogo Grid.RowSpan="4" ZIndex="0" />

            <!--  Header Component  -->
            <components:AppHeader
                Title="{Binding Title}"
                Grid.Row="0"
                FontSize="20"
                TitleColor="White"
                ZIndex="2" />

            <!--  Tab Bar  -->
            <Border
                Grid.Row="1"
                Padding="10,0"
                BackgroundColor="Transparent"
                StrokeThickness="0"
                ZIndex="100">
                <Grid ColumnDefinitions="*,*,*,*">
                    <Border
                        x:Name="StructuresTabBackground"
                        Grid.Column="0"
                        Padding="5,5"
                        BackgroundColor="Transparent"
                        StrokeShape="RoundRectangle 8"
                        StrokeThickness="0">
                        <StackLayout Spacing="0">
                            <Label
                                x:Name="StructuresLabel"
                                Style="{StaticResource TabLabel}"
                                Text="Structures">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding TabTappedCommand}" CommandParameter="Structures" />
                                </Label.GestureRecognizers>
                            </Label>
                            <Border
                                x:Name="StructuresUnderline"
                                BackgroundColor="Transparent"
                                HeightRequest="3"
                                StrokeShape="RoundRectangle 2"
                                StrokeThickness="0" />
                        </StackLayout>
                    </Border>
                    <Border
                        x:Name="LevelsTabBackground"
                        Grid.Column="1"
                        Padding="5,5"
                        BackgroundColor="Transparent"
                        StrokeShape="RoundRectangle 8"
                        StrokeThickness="0">
                        <StackLayout Spacing="0">
                            <Label
                                x:Name="LevelsLabel"
                                Style="{StaticResource TabLabel}"
                                Text="Levels">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding TabTappedCommand}" CommandParameter="Levels" />
                                </Label.GestureRecognizers>
                            </Label>
                            <Border
                                x:Name="LevelsUnderline"
                                BackgroundColor="Transparent"
                                HeightRequest="3"
                                StrokeShape="RoundRectangle 2"
                                StrokeThickness="0" />
                        </StackLayout>
                    </Border>
                    <Border
                        x:Name="WifiDevTabBackground"
                        Grid.Column="2"
                        Padding="5,5"
                        BackgroundColor="Transparent"
                        StrokeShape="RoundRectangle 8"
                        StrokeThickness="0">
                        <StackLayout Spacing="0">
                            <Label
                                x:Name="WifiDevLabel"
                                Style="{StaticResource TabLabel}"
                                Text="WiFi Dev">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding TabTappedCommand}" CommandParameter="WifiDev" />
                                </Label.GestureRecognizers>
                            </Label>
                            <Border
                                x:Name="WifiDevUnderline"
                                BackgroundColor="Transparent"
                                HeightRequest="3"
                                StrokeShape="RoundRectangle 2"
                                StrokeThickness="0" />
                        </StackLayout>
                    </Border>
                    <Border
                        x:Name="LocalDevTabBackground"
                        Grid.Column="3"
                        Padding="5,5"
                        BackgroundColor="Transparent"
                        StrokeShape="RoundRectangle 8"
                        StrokeThickness="0">
                        <StackLayout Spacing="0">
                            <Label
                                x:Name="LocalDevLabel"
                                Style="{StaticResource TabLabel}"
                                Text="Local Dev">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding TabTappedCommand}" CommandParameter="LocalDev" />
                                </Label.GestureRecognizers>
                            </Label>
                            <Border
                                x:Name="LocalDevUnderline"
                                BackgroundColor="Transparent"
                                HeightRequest="3"
                                StrokeShape="RoundRectangle 2"
                                StrokeThickness="0" />
                        </StackLayout>
                    </Border>
                </Grid>
            </Border>


            <!--  Plan Container (with zoom/pan)  -->
            <controls:PanPinchContainer
                x:Name="PlanContainer"
                Grid.Row="2"
                IsClippedToBounds="True"
                ZIndex="10">
                <Grid>
                    <Image
                        x:Name="PlanImage"
                        Aspect="AspectFit"
                        ZIndex="10" />
                    <Grid x:Name="DevicesOverlay" ZIndex="11" />
                </Grid>
            </controls:PanPinchContainer>

            <!--  Transparent overlay for closing dropdown on outside tap  -->
            <BoxView
                x:Name="DropdownCloseOverlay"
                Grid.Row="2"
                BackgroundColor="Transparent"
                InputTransparent="False"
                IsVisible="{Binding IsDropdownVisible}"
                ZIndex="49">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnBackgroundTapped" />
                </BoxView.GestureRecognizers>
            </BoxView>

            <!--  Dropdown content overlays plan, not TabBar  -->
            <Grid
                x:Name="DropdownContainer"
                Grid.Row="2"
                Padding="0,-10,0,0"
                HorizontalOptions="Fill"
                IsVisible="{Binding IsDropdownVisible}"
                RowDefinitions="Auto,*,Auto"
                ZIndex="50">
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnDropdownContentTapped" />
                </Grid.GestureRecognizers>
                <Border Margin="10,5,0,0" StrokeThickness="0">
                    <Label
                        x:Name="DropdownTitle"
                        Padding="5"
                        FontAttributes="Bold"
                        FontSize="24"
                        Text="{Binding DropdownTitle}"
                        TextColor="White" />
                </Border>

                <!--  Empty State Card for Structures Dropdown  -->
                <Border
                    x:Name="StructuresEmptyStateCard"
                    Grid.Row="1"
                    Margin="0,20,0,0"
                    Padding="15"
                    BackgroundColor="#2A2A2A"
                    HorizontalOptions="Center"
                    IsVisible="False"
                    Stroke="#444444"
                    StrokeShape="RoundRectangle 8"
                    StrokeThickness="1"
                    VerticalOptions="Start"
                    WidthRequest="375">
                    <Border.Triggers>
                        <MultiTrigger TargetType="Border">
                            <MultiTrigger.Conditions>
                                <BindingCondition Binding="{Binding ShowStructuresEmptyState}" Value="True" />
                                <BindingCondition Binding="{Binding CurrentActiveTab}" Value="Structures" />
                            </MultiTrigger.Conditions>
                            <Setter Property="IsVisible" Value="True" />
                        </MultiTrigger>
                    </Border.Triggers>
                    <StackLayout Spacing="15" VerticalOptions="Center">
                        <!--  Icon  -->
                        <Image
                            HeightRequest="48"
                            HorizontalOptions="Center"
                            Source="info.svg"
                            WidthRequest="48" />

                        <!--  Message  -->
                        <Label
                            FontSize="16"
                            HorizontalOptions="Center"
                            HorizontalTextAlignment="Center"
                            LineBreakMode="WordWrap"
                            Text="Nothing to display yet"
                            TextColor="White" />

                        <!--  Add Structure Button  -->
                        <Button
                            Padding="20,10"
                            BackgroundColor="#007AFF"
                            Command="{Binding NavigateToStructureEditorCommand}"
                            CornerRadius="8"
                            FontSize="14"
                            HorizontalOptions="Center"
                            Text="Add Structure"
                            TextColor="White" />
                    </StackLayout>
                </Border>

                <!--  Dropdown CollectionView with rounded frame  -->
                <Border
                    x:Name="DropdownFrame"
                    Grid.Row="1"
                    Margin="15,20,20,10"
                    Padding="5"
                    BackgroundColor="#EE2A2A2A"
                    HorizontalOptions="Center"
                    Stroke="#EE2A2A2A"
                    StrokeShape="RoundRectangle 25"
                    StrokeThickness="3"
                    VerticalOptions="Start"
                    ZIndex="51">
                    <Border.Shadow>
                        <Shadow
                            Brush="Black"
                            Opacity="1"
                            Radius="10"
                            Offset="6,6" />
                    </Border.Shadow>

                    <Grid
                     
                        RowDefinitions="Auto,*,*"
                        ZIndex="52">
                        <CollectionView
                            x:Name="DropdownItemsView"
                            Grid.Row="0"
                            Margin="10"
                            Background="Transparent"
                            ItemsSource="{Binding DropdownItems}"
                            SelectionChanged="OnDropdownItemSelected"
                            SelectionMode="Single"
                            VerticalOptions="Center"
                            ZIndex="53">
                            <CollectionView.ItemsLayout>
                                <GridItemsLayout
                                    HorizontalItemSpacing="0"
                                    Orientation="Vertical"
                                    Span="1"
                                    VerticalItemSpacing="0" />
                            </CollectionView.ItemsLayout>

                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <components:GradientWifiCardComponent
                                        Margin="0"
                                        Padding="10"
                                        AddButtonEnabled="{Binding IsActionEnabled}"
                                        AddToFloorPlanCommand="{Binding Source={x:Reference DropdownItemsView}, Path=BindingContext.AddDeviceToFloorPlanCommand}"
                                        CommandParameter="{Binding .}"
                                        DeleteCommand="{Binding Source={x:Reference DropdownItemsView}, Path=BindingContext.DeleteDeviceFromDropdownCommand}"
                                        DeviceName="{Binding Text}"
                                        Icon="{Binding Icon}"
                                        IsConnected="{Binding IsConnected}"
                                        IsPlacedOnCurrentFloor="{Binding IsPlacedOnCurrentFloor}"
                                        LastSeen="{Binding LastSeen}"
                                        ShowAddButton="{Binding HasActions}"
                                        ShowDeviceOptionsCommand="{Binding Source={x:Reference DropdownItemsView}, Path=BindingContext.ShowDeviceOptionsCommand}"
                                        ShowSettingsButton="{Binding HasActions}"
                                        ShowStatus="{Binding ShowStatus}"
                                        WidthRequest="300">

                                        <components:GradientWifiCardComponent.Triggers>
                                            <DataTrigger
                                                Binding="{Binding Source={x:Reference DropdownItemsView}, Path=BindingContext.CurrentActiveTab}"
                                                TargetType="components:GradientWifiCardComponent"
                                                Value="Structures">
                                                <Setter Property="ShowAddButton" Value="False" />
                                                <Setter Property="ShowSettingsButton" Value="False" />
                                            </DataTrigger>
                                            <DataTrigger
                                                Binding="{Binding Source={x:Reference DropdownItemsView}, Path=BindingContext.CurrentActiveTab}"
                                                TargetType="components:GradientWifiCardComponent"
                                                Value="Levels">
                                                <Setter Property="ShowAddButton" Value="False" />
                                                <Setter Property="ShowSettingsButton" Value="False" />
                                            </DataTrigger>
                                        </components:GradientWifiCardComponent.Triggers>

                                    </components:GradientWifiCardComponent>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <!--  Scan button at bottom of dropdown frame  -->
                        <Border
                            Grid.Row="1"
                            Margin="0,20,0,0"
                            Padding="20,15"
                            BackgroundColor="#007AFF"
                            HeightRequest="50"
                            HorizontalOptions="Center"
                            InputTransparent="False"
                            IsVisible="{Binding ShowScanButton}"
                            StrokeShape="RoundRectangle 25"
                            ZIndex="54">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ScanButtonTappedCommand}" />
                            </Border.GestureRecognizers>
                            <Label
                                FontAttributes="Bold"
                                FontSize="14"
                                HorizontalOptions="Center"
                                Text="{Binding ScanButtonText}"
                                TextColor="White"
                                VerticalOptions="Center" />
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!--  Footer Component  -->
            <components:AppFooter
                x:Name="Footer"
                Grid.Row="3"
                ZIndex="200" />
        </Grid>
    </ContentPage.Content>
</ContentPage>
