<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ReisingerIntelliApp_V4.Views.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:components="clr-namespace:ReisingerIntelliApp_V4.Components"
    xmlns:controls="clr-namespace:ReisingerIntelliApp_V4.Controls"
    xmlns:converters="clr-namespace:ReisingerIntelliApp_V4.Converters"
    xmlns:models="clr-namespace:ReisingerIntelliApp_V4.Models"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewmodels="clr-namespace:ReisingerIntelliApp_V4.ViewModels"
    x:Name="Root"
    x:DataType="viewmodels:MainPageViewModel"
    BackgroundColor="{AppThemeBinding Light={StaticResource LightPageBackground}, Dark={StaticResource DarkPageBackground}}"
    Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <ResourceDictionary>
            <toolkit:InvertedBoolConverter x:Key="InvertBooleanConverter" />
            <converters:DoorStateToColorConverter x:Key="DoorStateToColorConverter" />
            <converters:BoolToColorConverter x:Key="BoolToColorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <!--  Remove BindingContext - will be set in code-behind  -->

    <ContentPage.Content>
        <Grid IsClippedToBounds="True" RowDefinitions="Auto,Auto,*,Auto">
            <!--  Background Logo - placed first so it's behind everything  -->
            <components:BackgroundLogo Grid.RowSpan="4" ZIndex="0" />

            <!--  Header Component  -->
            <components:AppHeader
                Title="{Binding Title}"
                Grid.Row="0"
                FontSize="20"
                TitleColor="White"
                ZIndex="2" />

            <!--  Tab Bar  -->
            <Border
                Grid.Row="1"
                Padding="10,0"
                BackgroundColor="{AppThemeBinding Light={StaticResource LightPageBackground}, Dark={StaticResource DarkPageBackground}}"
                StrokeThickness="0"
                ZIndex="100">
                <Grid ColumnDefinitions="*,*,*,*">
                    <Border
                        x:Name="StructuresTabBackground"
                        Grid.Column="0"
                        Padding="5,5"
                        BackgroundColor="Transparent"
                        StrokeShape="RoundRectangle 8"
                        StrokeThickness="0">
                        <StackLayout Spacing="0">
                            <Label
                                x:Name="StructuresLabel"
                                Style="{StaticResource TabLabel}"
                                Text="Structures">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding TabTappedCommand}" CommandParameter="Structures" />
                                </Label.GestureRecognizers>
                            </Label>
                            <Border
                                x:Name="StructuresUnderline"
                                BackgroundColor="Transparent"
                                HeightRequest="3"
                                StrokeShape="RoundRectangle 2"
                                StrokeThickness="0" />
                        </StackLayout>
                    </Border>
                    <Border
                        x:Name="LevelsTabBackground"
                        Grid.Column="1"
                        Padding="5,5"
                        BackgroundColor="Transparent"
                        StrokeShape="RoundRectangle 8"
                        StrokeThickness="0">
                        <StackLayout Spacing="0">
                            <Label
                                x:Name="LevelsLabel"
                                Style="{StaticResource TabLabel}"
                                Text="Levels">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding TabTappedCommand}" CommandParameter="Levels" />
                                </Label.GestureRecognizers>
                            </Label>
                            <Border
                                x:Name="LevelsUnderline"
                                BackgroundColor="Transparent"
                                HeightRequest="3"
                                StrokeShape="RoundRectangle 2"
                                StrokeThickness="0" />
                        </StackLayout>
                    </Border>
                    <Border
                        x:Name="WifiDevTabBackground"
                        Grid.Column="2"
                        Padding="5,5"
                        BackgroundColor="Transparent"
                        StrokeShape="RoundRectangle 8"
                        StrokeThickness="0">
                        <StackLayout Spacing="0">
                            <Label
                                x:Name="WifiDevLabel"
                                Style="{StaticResource TabLabel}"
                                Text="WiFi Dev">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding TabTappedCommand}" CommandParameter="WifiDev" />
                                </Label.GestureRecognizers>
                            </Label>
                            <Border
                                x:Name="WifiDevUnderline"
                                BackgroundColor="Transparent"
                                HeightRequest="3"
                                StrokeShape="RoundRectangle 2"
                                StrokeThickness="0" />
                        </StackLayout>
                    </Border>
                    <Border
                        x:Name="LocalDevTabBackground"
                        Grid.Column="3"
                        Padding="5,5"
                        BackgroundColor="Transparent"
                        StrokeShape="RoundRectangle 8"
                        StrokeThickness="0">
                        <StackLayout Spacing="0">
                            <Label
                                x:Name="LocalDevLabel"
                                Style="{StaticResource TabLabel}"
                                Text="Local Dev">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding TabTappedCommand}" CommandParameter="LocalDev" />
                                </Label.GestureRecognizers>
                            </Label>
                            <Border
                                x:Name="LocalDevUnderline"
                                BackgroundColor="Transparent"
                                HeightRequest="3"
                                StrokeShape="RoundRectangle 2"
                                StrokeThickness="0" />
                        </StackLayout>
                    </Border>
                </Grid>
            </Border>

            <!--  Plan Container (with zoom/pan)  -->
            <!-- ✅ FIX: DevicesOverlay ist jetzt INNERHALB des PanPinchContainer -->
            <!-- Damit bewegen sich PlacedDevices automatisch mit dem Bauplan -->
            <controls:PanPinchContainer
                x:Name="PlanContainer"
                Grid.Row="2"
                IsClippedToBounds="True"
                ZIndex="0">
                <!-- Grid als Container für Plan und Devices - beide bewegen sich zusammen -->
                <Grid x:Name="PlanAndDevicesContainer">
                    <Image
                        x:Name="PlanImage"
                        Aspect="AspectFit"
                        ZIndex="10" />
                    <!-- ✅ FIX: DevicesOverlay InputTransparent="False" wie im main Branch -->
                    <!-- Dies erlaubt PlacedDeviceControls Input zu empfangen -->
                    <!-- PanPinchContainer erkennt Gesten durch _inputBlockCount und _moveModeCount -->
                    <AbsoluteLayout
                        x:Name="DevicesOverlay"
                        InputTransparent="False"
                        ZIndex="11" />
                </Grid>
            </controls:PanPinchContainer>

            <!--  Transparent overlay for closing dropdown on outside tap  -->
            <BoxView
                x:Name="DropdownCloseOverlay"
                Grid.Row="2"
                BackgroundColor="Transparent"
                InputTransparent="False"
                IsVisible="{Binding IsDropdownVisible}"
                ZIndex="49">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnBackgroundTapped" />
                </BoxView.GestureRecognizers>
            </BoxView>

            <!--  Dropdown content overlays plan, not TabBar  -->
            <Grid
                x:Name="DropdownContainer"
                Grid.Row="2"
                Padding="0,-10,0,0"
                HorizontalOptions="Fill"
                IsVisible="{Binding IsDropdownVisible}"
                RowDefinitions="Auto,Auto"
                VerticalOptions="Start"
                ZIndex="50">
                <Border Margin="10,5,0,0" StrokeThickness="0">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnDropdownContentTapped" />
                    </Border.GestureRecognizers>

                </Border>

                <!--  Empty State Card for Structures Dropdown  -->
                <Border
                    x:Name="StructuresEmptyStateCard"
                    Grid.Row="1"
                    Margin="0,20,0,0"
                    Padding="15"
                    BackgroundColor="#2A2A2A"
                    HorizontalOptions="Center"
                    IsVisible="False"
                    Stroke="#444444"
                    StrokeShape="RoundRectangle 8"
                    StrokeThickness="1"
                    VerticalOptions="Start"
                    WidthRequest="375">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnDropdownContentTapped" />
                    </Border.GestureRecognizers>
                    <Border.Triggers>
                        <MultiTrigger TargetType="Border">
                            <MultiTrigger.Conditions>
                                <BindingCondition Binding="{Binding ShowStructuresEmptyState}" Value="True" />
                                <BindingCondition Binding="{Binding CurrentActiveTab}" Value="Structures" />
                            </MultiTrigger.Conditions>
                            <Setter Property="IsVisible" Value="True" />
                        </MultiTrigger>
                    </Border.Triggers>
                    <StackLayout Spacing="15" VerticalOptions="Center">

                        <!--  Icon  -->
                        <Image
                            HeightRequest="48"
                            HorizontalOptions="Center"
                            Source="info.svg"
                            WidthRequest="48" />

                        <!--  Message  -->
                        <Label
                            FontSize="16"
                            HorizontalOptions="Center"
                            HorizontalTextAlignment="Center"
                            LineBreakMode="WordWrap"
                            Text="Nothing to display yet"
                            TextColor="White" />

                        <!--  Add Structure Button  -->
                        <Button
                            Padding="20,10"
                            BackgroundColor="#007AFF"
                            Command="{Binding NavigateToStructureEditorCommand}"
                            CornerRadius="8"
                            FontSize="14"
                            HorizontalOptions="Center"
                            Text="Add Structure"
                            TextColor="White" />
                    </StackLayout>
                </Border>

                <!--  Dropdown CollectionView with rounded frame  -->
                <Border
                    x:Name="DropdownFrame"
                    Grid.Row="1"
                    Margin="19,18.6"
                    Padding="0"
                    BackgroundColor="#EE2A2A2A"
                    HorizontalOptions="Center"
                    Stroke="#EE2A2A2A"
                    StrokeShape="RoundRectangle 25"
                    StrokeThickness="3"
                    VerticalOptions="Start"
                    ZIndex="51">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnDropdownContentTapped" />
                    </Border.GestureRecognizers>

                    <Grid RowDefinitions="Auto,Auto" ZIndex="52">
                        <CollectionView
                            x:Name="DropdownItemsView"
                            Grid.Row="0"
                            Background="Transparent"
                            ItemSizingStrategy="MeasureAllItems"
                            ItemsSource="{Binding DropdownItems}"
                            SelectionChanged="OnDropdownItemSelected"
                            SelectionMode="Single"
                            VerticalOptions="Start"
                            ZIndex="54">
                            <CollectionView.ItemsLayout>
                                <GridItemsLayout
                                    HorizontalItemSpacing="10"
                                    Orientation="Vertical"
                                    Span="2"
                                    VerticalItemSpacing="10" />
                            </CollectionView.ItemsLayout>
                
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:DropdownItemModel">
                                    <components:GradientWifiCardComponent
                                        Margin="0"
                                        Padding="0,10,0,0"
                                        AddButtonEnabled="{Binding IsActionEnabled}"
                                        AddToFloorPlanCommand="{Binding BindingContext.AddDeviceToFloorPlanCommand, Source={x:Reference Root}}"
                                        CommandParameter="{Binding .}"
                                        DeleteCommand="{Binding BindingContext.DeleteDeviceFromDropdownCommand, Source={x:Reference Root}}"
                                        DeviceName="{Binding Text}"
                                        Icon="{Binding Icon}"
                                        IsConnected="{Binding IsConnected}"
                                        IsPlacedOnCurrentFloor="{Binding IsPlacedOnCurrentFloor}"
                                        IsSelected="{Binding IsSelected}"
                                        LastSeen="{Binding LastSeen}"
                                        NetworkInfo="{Binding NetworkInfo}"
                                        SettingsCommand="{Binding BindingContext.CardSettingsCommand, Source={x:Reference Root}}"
                                        ShowAddButton="{Binding HasActions}"
                                        ShowDeviceOptionsCommand="{Binding BindingContext.ShowDeviceOptionsCommand, Source={x:Reference Root}}"
                                        ShowNetworkInfo="True"
                                        ShowSettingsButton="{Binding HasActions}"
                                        ShowStatus="{Binding ShowStatus}"
                                        WidthRequest="180">

                                        <components:GradientWifiCardComponent.Triggers>
                                            <DataTrigger
                                                Binding="{Binding BindingContext.CurrentActiveTab, Source={x:Reference Root}}"
                                                TargetType="components:GradientWifiCardComponent"
                                                Value="Structures">
                                                <Setter Property="ShowAddButton" Value="False" />
                                                <Setter Property="ShowSettingsButton" Value="True" />
                                            </DataTrigger>
                                            <DataTrigger
                                                Binding="{Binding BindingContext.CurrentActiveTab, Source={x:Reference Root}}"
                                                TargetType="components:GradientWifiCardComponent"
                                                Value="Levels">
                                                <Setter Property="ShowAddButton" Value="False" />
                                                <Setter Property="ShowSettingsButton" Value="True" />
                                            </DataTrigger>
                                        </components:GradientWifiCardComponent.Triggers>

                                    </components:GradientWifiCardComponent>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                           
                        </CollectionView>

                        <!--  Scan button at bottom of dropdown frame  -->
                        <Border
                            Grid.Row="1"
                            Margin="0,10,0,10"
                            Padding="20,15"
                            BackgroundColor="#007AFF"
                            HeightRequest="50"
                            HorizontalOptions="Center"
                            InputTransparent="False"
                            IsVisible="{Binding ShowScanButton}"
                            StrokeShape="RoundRectangle 25"
                            VerticalOptions="End"
                            ZIndex="55">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ScanButtonTappedCommand}" />
                            </Border.GestureRecognizers>
                            <Label
                                FontAttributes="Bold"
                                FontSize="14"
                                HorizontalOptions="Center"
                                Text="{Binding ScanButtonText}"
                                TextColor="White"
                                VerticalOptions="Center" />
                        </Border>
                    </Grid>
                </Border>
            </Grid>


            <!--  ═══════════  PLACED DEVICES PANEL (collapsible, above footer)  ═══════════  -->
            <Grid
                Grid.Row="2"
                IsVisible="{Binding HasPlacedDevices}"
                VerticalOptions="End"
                ZIndex="150">

                <!--  Toggle tab  -->
                <Border
                    Margin="0,0,0,0"
                    Padding="14,6"
                    BackgroundColor="{StaticResource PlacedDeviceCardBackground}"
                    HorizontalOptions="Center"
                    IsVisible="{Binding IsDevicePanelOpen, Converter={StaticResource InvertBooleanConverter}}"
                    Stroke="{StaticResource PlacedDeviceCardBorder}"
                    StrokeShape="RoundRectangle 12,12,0,0"
                    StrokeThickness="1"
                    VerticalOptions="End"
                    ZIndex="151">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnDevicePanelToggle" />
                    </Border.GestureRecognizers>
                    <HorizontalStackLayout Spacing="6">
                        <Label
                            FontFamily="SpaceMonoBold"
                            FontSize="12"
                            Text="▲ Geräte"
                            TextColor="{StaticResource PlacedDeviceText}" />
                    </HorizontalStackLayout>
                </Border>

                <!--  Expanded panel  -->
                <Border
                    Margin="8,0,8,0"
                    Padding="0"
                    BackgroundColor="{StaticResource PlacedDeviceCardBackground}"
                    IsVisible="{Binding IsDevicePanelOpen}"
                    MaximumHeightRequest="280"
                    Stroke="{StaticResource PlacedDeviceCardBorder}"
                    StrokeShape="RoundRectangle 16,16,0,0"
                    StrokeThickness="1"
                    VerticalOptions="End"
                    ZIndex="152">
                    <Border.Shadow>
                        <Shadow
                            Brush="{StaticResource PlacedDeviceCardShadow}"
                            Opacity="0.5"
                            Radius="16"
                            Offset="0,-4" />
                    </Border.Shadow>

                    <Grid RowDefinitions="Auto,*">
                        <!--  Panel header  -->
                        <Grid
                            Grid.Row="0"
                            Padding="16,10,16,6"
                            ColumnDefinitions="*,Auto">
                            <Label
                                Grid.Column="0"
                                FontFamily="SpaceMonoBold"
                                FontSize="14"
                                Text="Platzierte Geräte"
                                TextColor="{StaticResource PlacedDeviceText}"
                                VerticalOptions="Center" />
                            <Border
                                Grid.Column="1"
                                Padding="8,4"
                                BackgroundColor="{StaticResource PlacedDeviceActionBg}"
                                StrokeShape="RoundRectangle 8"
                                StrokeThickness="0">
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnDevicePanelToggle" />
                                </Border.GestureRecognizers>
                                <Label
                                    FontFamily="SpaceMonoBold"
                                    FontSize="12"
                                    Text="▼ Schließen"
                                    TextColor="{StaticResource PlacedDeviceTextSecondary}" />
                            </Border>
                        </Grid>

                        <!--  Device list  -->
                        <CollectionView
                            x:Name="DevicePanelList"
                            Grid.Row="1"
                            Margin="8,0,8,8"
                            ItemsSource="{Binding StructuresVM.SelectedLevel.PlacedDevices}">
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout ItemSpacing="6" Orientation="Vertical" />
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:PlacedDeviceModel">
                                    <Border
                                        Padding="12,8"
                                        BackgroundColor="{StaticResource PlacedDeviceActionBg}"
                                        Stroke="{StaticResource PlacedDeviceCardBorder}"
                                        StrokeShape="RoundRectangle 12"
                                        StrokeThickness="1">
                                        <Grid ColumnDefinitions="*,Auto,Auto,Auto,Auto" ColumnSpacing="8">
                                            <!--  Device info  -->
                                            <VerticalStackLayout
                                                Grid.Column="0"
                                                Spacing="1"
                                                VerticalOptions="Center">
                                                <Label
                                                    FontFamily="SpaceMonoBold"
                                                    FontSize="13"
                                                    LineBreakMode="TailTruncation"
                                                    MaxLines="1"
                                                    Text="{Binding Name}"
                                                    TextColor="{StaticResource PlacedDeviceText}" />
                                                <HorizontalStackLayout Spacing="5">
                                                    <Ellipse
                                                        Fill="{Binding IsOnline, Converter={StaticResource BoolToColorConverter}}"
                                                        HeightRequest="8"
                                                        VerticalOptions="Center"
                                                        WidthRequest="8" />
                                                    <Label
                                                        FontFamily="SpaceMonoRegular"
                                                        FontSize="10"
                                                        LineBreakMode="TailTruncation"
                                                        MaxLines="1"
                                                        Opacity="0.7"
                                                        Text="{Binding NetworkInfo}"
                                                        TextColor="{StaticResource PlacedDeviceTextSecondary}" />
                                                </HorizontalStackLayout>
                                            </VerticalStackLayout>

                                            <!--  Door toggle  -->
                                            <ImageButton
                                                Grid.Column="1"
                                                Padding="4"
                                                BackgroundColor="{Binding IsDoorOpen, Converter={StaticResource DoorStateToColorConverter}}"
                                                BorderColor="{StaticResource PlacedDeviceMoveButton}"
                                                BorderWidth="2"
                                                Clicked="OnPanelDoorToggle"
                                                CommandParameter="{Binding .}"
                                                CornerRadius="16"
                                                HeightRequest="32"
                                                VerticalOptions="Center"
                                                WidthRequest="32">
                                                <ImageButton.Source>
                                                    <FontImageSource
                                                        FontFamily="SpaceMonoBold"
                                                        Glyph="⇔"
                                                        Size="14"
                                                        Color="White" />
                                                </ImageButton.Source>
                                            </ImageButton>

                                            <!--  Settings (name, credentials)  -->
                                            <ImageButton
                                                Grid.Column="2"
                                                Padding="5"
                                                BackgroundColor="{StaticResource PlacedDeviceActionBg}"
                                                BorderColor="{StaticResource PlacedDeviceDropdownBorder}"
                                                BorderWidth="1"
                                                Clicked="OnPanelDeviceSettings"
                                                CommandParameter="{Binding .}"
                                                CornerRadius="16"
                                                HeightRequest="32"
                                                Source="settings.svg"
                                                VerticalOptions="Center"
                                                WidthRequest="32">
                                                <ImageButton.Behaviors>
                                                    <toolkit:IconTintColorBehavior TintColor="{StaticResource PlacedDeviceMoveButton}" />
                                                </ImageButton.Behaviors>
                                            </ImageButton>

                                            <!--  Parameters (API parameters)  -->
                                            <ImageButton
                                                Grid.Column="3"
                                                Padding="5"
                                                BackgroundColor="{StaticResource PlacedDeviceActionBg}"
                                                BorderColor="{StaticResource PlacedDeviceDropdownBorder}"
                                                BorderWidth="1"
                                                Clicked="OnPanelSettings"
                                                CommandParameter="{Binding .}"
                                                CornerRadius="16"
                                                HeightRequest="32"
                                                Source="configuredevicebutton.svg"
                                                VerticalOptions="Center"
                                                WidthRequest="32">
                                                <ImageButton.Behaviors>
                                                    <toolkit:IconTintColorBehavior TintColor="{StaticResource PlacedDeviceMoveButton}" />
                                                </ImageButton.Behaviors>
                                            </ImageButton>

                                            <!--  Delete  -->
                                            <ImageButton
                                                Grid.Column="4"
                                                Padding="5"
                                                BackgroundColor="{StaticResource PlacedDeviceDeleteButton}"
                                                Clicked="OnPanelDelete"
                                                CommandParameter="{Binding .}"
                                                CornerRadius="16"
                                                HeightRequest="32"
                                                Source="bin.svg"
                                                VerticalOptions="Center"
                                                WidthRequest="32">
                                                <ImageButton.Behaviors>
                                                    <toolkit:IconTintColorBehavior TintColor="White" />
                                                </ImageButton.Behaviors>
                                            </ImageButton>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </Grid>
                </Border>
            </Grid>


            <!--  Footer Component  -->
            <components:AppFooter
                x:Name="Footer"
                Grid.Row="3"
                Margin="0,0,0,-7"
                ZIndex="200" />
        </Grid>
    </ContentPage.Content>
</ContentPage>
