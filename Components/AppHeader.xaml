<?xml version="1.0" encoding="utf-8" ?>
<ContentView x:Name="root"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReisingerIntelliApp_V4.Components.AppHeader">
    
    <Border Padding="0,20,0,20" StrokeThickness="0">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#EBD5D1" Offset="0.0" />
                <GradientStop Color="#1C1C1C" Offset="0.9" />
                <GradientStop Color="Transparent" Offset="1.0" />
            </LinearGradientBrush>
        </Border.Background>
        
        <Grid ColumnDefinitions="Auto,*,Auto">
            <!-- Back Button -->
            <Button x:Name="BackButton"
                    Grid.Column="0"
                    Text="&#8249;"
                    FontSize="24"
                    TextColor="White"
                    BackgroundColor="Transparent"
                    BorderWidth="0"
                    WidthRequest="40"
                    HeightRequest="40"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"
                    IsVisible="False"
                    Command="{Binding Source={x:Reference root}, Path=BackCommand}" />
            
            <!-- Title -->
            <Label x:Name="TitleLabel"
                   Grid.Column="1"
                   Text="Reisinger App" 
                   FontSize="20" 
                   FontAttributes="Bold"
                   TextColor="White" 
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
            
            <!-- Spacer for balance (same width as back button) -->
            <BoxView Grid.Column="2"
                     WidthRequest="40"
                     HeightRequest="40"
                     IsVisible="False" />
        </Grid>
    </Border>
    
</ContentView>
