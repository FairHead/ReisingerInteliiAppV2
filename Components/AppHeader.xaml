<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="ReisingerIntelliApp_V4.Components.AppHeader"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="root">

    <Border Padding="0,20,0,20" StrokeThickness="0">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                <GradientStop Offset="0.0" Color="Transparent" />
                <GradientStop Offset="0.9" Color="#565656" />
                <GradientStop Offset="1.0" Color="#2D2D2D" />
            </LinearGradientBrush>
        </Border.Background>

        <Grid ColumnDefinitions="Auto,*,Auto">
            <!--  Back Button  -->
            <Button
                x:Name="BackButton"
                Grid.Column="0"
                Margin="0,-8,0,0"
                BackgroundColor="Transparent"
                BorderWidth="0"
                Command="{Binding Source={x:Reference root}, Path=BackCommand}"
                FontSize="30"
                HorizontalOptions="StartAndExpand"
                IsVisible="False"
                Text="&#8249;"
                TextColor="White"
                VerticalOptions="Center" />

            <!--  Title  -->
            <Label
                x:Name="TitleLabel"
                Grid.Column="1"
                FontAttributes="Bold"
                FontSize="20"
                HorizontalOptions="Center"
                Text="Reisinger App"
                TextColor="White"
                VerticalOptions="Center" />

            <!--  Spacer for balance (same width as back button)  -->
            <BoxView
                Grid.Column="2"
                HeightRequest="40"
                IsVisible="False"
                WidthRequest="40" />
        </Grid>
    </Border>

</ContentView>
