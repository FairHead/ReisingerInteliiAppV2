<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReisingerIntelliApp_V4.Controls.DevicePinOverlay"
             x:Name="Root"
             IsVisible="True"
             InputTransparent="False">
    
    <!-- Grid to hold all device pins -->
    <Grid x:Name="PinContainer" 
          HorizontalOptions="Fill"
          VerticalOptions="Fill"
          InputTransparent="False">
        
        <!-- Pin placement hint (shown when adding new device) -->
        <Label x:Name="PlacementHint"
               Text="Tap anywhere on the floor plan to place the device"
               FontSize="16"
               TextColor="White"
               BackgroundColor="#80000000"
               Padding="10"
               HorizontalOptions="Center"
               VerticalOptions="Top"
               Margin="0,20,0,0"
               IsVisible="False" />
        
        <!-- Pins will be added programmatically here -->
    </Grid>
    
</ContentView>